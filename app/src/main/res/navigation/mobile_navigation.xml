<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <!-- Pantalla de inicio de sesiÃ³n (login) -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.erickdiaz.proyectobiblioteca.loginbiblio"
        android:label="LoginFragment"
        tools:layout="@layout/activity_login">

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/main" />
    </fragment>

    <!-- Pantalla de registro de usuario -->
    <fragment
        android:id="@+id/main"
        android:name="com.erickdiaz.proyectobiblioteca.ui.home.HomeFragment"
        android:label="RegistroUsuarioFragment"
        tools:layout="@layout/activity_main" >

    </fragment>

    <!-- Pantalla principal (home) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.erickdiaz.proyectobiblioteca.registro_usuario"
        android:label="HomeFragment"
        tools:layout="@layout/register_activity">
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/main" />
    </fragment>
</navigation>
