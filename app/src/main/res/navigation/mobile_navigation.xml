<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <!-- Pantalla de inicio de sesiÃ³n (login) -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.erickdiaz.proyectobiblioteca."
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_registro"
            app:destination="@id/registroUsuarioFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Pantalla de registro de usuario -->
    <fragment
        android:id="@+id/registroUsuarioFragment"
        android:name="com.erickdiaz.proyectobiblioteca.RegistroUsuarioFragment"
        android:label="RegistroUsuarioFragment"
        tools:layout="@layout/fragment_registro_usuario" >
        <action
            android:id="@+id/action_registro_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Pantalla principal (home) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.erickdiaz.proyectobiblioteca.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>
