<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- ImageView para la portada -->
    <ImageView
        android:id="@+id/portadaImageView"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:src="@drawable/portada_placeholder" />

    <!-- LinearLayout vertical para el título y el autor -->
    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título del Libro" />

        <TextView
            android:id="@+id/autorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor del Libro" />
    </LinearLayout>
</LinearLayout>
